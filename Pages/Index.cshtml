@page
@model IndexModel
@{
    ViewData["Title"] = "Adopción de Mascotas";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="css/site.css">
</head>
<body>
    <header>
        <h1>🐾 Adopta una Mascota 🐾</h1>
    </header>
    
    <section class="contenedor">
        <h2>Conoce a nuestros amigos en adopción</h2>
        <div class="grid">
            <div class="card">
                <img src="https://via.placeholder.com/200" alt="Perro en adopción">
                <h3>Max</h3>
                <p>Edad: 2 años | Raza: Labrador</p>
                <button>Adoptar</button>
            </div>
            <div class="card">
                <img src="https://via.placeholder.com/200" alt="Gato en adopción">
                <h3>Mia</h3>
                <p>Edad: 1 año | Raza: Siamés</p>
                <button>Adoptar</button>
            </div>
        </div>
    </section>
</body>
</html>
