@model InventoryManagementSystem.Models.Proveedor

@{
    ViewData["Title"] = "Details";
}

<h1>Lista</h1>

<div class="container py-4">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 500px;">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="fas fa-eye me-2"></i> Detalles de @Html.DisplayFor(model => model.Nombre)</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Nombre)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Direccion)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Telefono)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-8">
                    <a href="mailto:@Model.Email" class="text-primary">@Html.DisplayFor(model => model.Email)</a>
                </dd>
            </dl>
            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Edit" asp-route-id="@Model.ProveedorId" class="btn btn-warning"><i class="fas fa-edit me-2"></i> Editar</a>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i> Volver</a>
            </div>
        </div>
    </div>
</div>