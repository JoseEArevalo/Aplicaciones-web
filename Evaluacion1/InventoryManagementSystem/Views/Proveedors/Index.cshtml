@model IEnumerable<InventoryManagementSystem.Models.Proveedor>

@{
    ViewData["Title"] = "Proveedores";
}

<h1>INICIO</h1>


<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-dark"><i class="fas fa-truck me-2"></i> Proveedores</h1>
        <a asp-action="Create" class="btn btn-primary shadow-sm"><i class="fas fa-plus me-2"></i> Nuevo Proveedor</a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                        <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                            <td>
                                <a href="mailto:@item.Email" class="badge bg-primary text-white">
                                    @Html.DisplayFor(modelItem => item.Email)
                                </a>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.ProveedorId" class="btn btn-outline-info btn-sm"><i class="fas fa-eye">LISTAR</i></a>
                                <a asp-action="Edit" asp-route-id="@item.ProveedorId" class="btn btn-outline-warning btn-sm"><i class="fas fa-edit">EDITAR</i></a>
                                <a asp-action="Delete" asp-route-id="@item.ProveedorId" class="btn btn-outline-danger btn-sm"><i class="fas fa-trash">ELIMINAR</i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.3s;
    }
    .btn-sm {
        padding: 0.25rem 0.5rem;
    }
</style>
